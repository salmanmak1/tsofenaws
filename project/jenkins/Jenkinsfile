pipeline {
    agent { docker { image 'python:3.10.7-alpine' } }
    stages {
        stage('Pre Build') {
            steps {
                echo 'Pre Build'
                sh 'docker ps'
                sh 'python --version'
                sh 'pwd'
            }
        }        
        stage('Checkout Code') {
            steps {
                echo 'Code is already checked out'
            }
        }
        stage('Build and Run Code') {
            steps {
                dir('project/code')
                {
                    sh 'ls'
                    sh 'python *.py'
                }
            }
        }
        stage('Run Unit Tests') {
            steps {
                dir('project/tests')
                {
                    sh 'ls'
                    sh 'python *.py'
                }
            }
        }
    }
    post { 
        always { 
            echo 'Post Build Cleaning...'
        }
    }
}
