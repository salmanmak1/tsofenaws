pipeline {
    agent { docker { image 'python:3.10.7-alpine' } }
    stages {
        stage('Pre Build') {
            steps {
                echo 'Pre Build'
                sh 'python --version'
                sh 'pwd'
            }
        }        
        stage('Checkout Code') {
            steps {
                echo 'Code is already checked out'
            }
        }
        stage('Build and Run Code') {
            steps {
                dir('project/code')
                {
                    sh 'ls'
                    sh 'python *.py'
                }
            }
        }
        stage('Run Unit Tests') {
            steps {
                dir('project/tests')
                {
                    sh 'ls'
                    sh 'python *.py'
                }
            }
        }
    }
    post { 
        success {
            script {
                echo 'Build Passed'
                echo env.CHANGE_ID
                if (env.CHANGE_ID) {
                    pullRequest.addLabel('Jenkins Build Passed')
                }
            }
        }
        failure {
            script {
                echo 'Build Failed'
                echo env.CHANGE_ID
                if (env.CHANGE_ID) {
                    pullRequest.addLabel('Jenkins Build Failed')
                }
            }
        }
        always { 
            echo 'Post Build Cleaning...'
        }
    }
}
